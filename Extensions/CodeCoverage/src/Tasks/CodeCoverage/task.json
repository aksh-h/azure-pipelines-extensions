{
  "id": "AF889D27-7A90-4AAB-A4D5-170AC2F2A7C6",
  "name": "VerifyCodeCoverage",
  "friendlyName": "Verify Code Coverage",
  "description": "Get Code Coverage data",
  "author": "akshayh",
  "helpMarkDown": "",
  "category": "Utility",
  "visibility": [
    "Release"
  ],
  "runsOn": [
    "ServerGate"
  ],
  "version": {
    "Major": 0,
    "Minor": 1,
    "Patch": 0
  },
  "instanceNameFormat": "Verify Code Coverage",
  "groups": [],
  "inputs": [
    {
      "name": "module",
      "type": "string",
      "label": "Module",
      "required": true,
      "defaultValue": "",
      "helpMarkDown": "Name of the module or dll from the primary artifact to verify code coverage for"
    },
    {
      "name": "Type",
      "type": "radio",
      "label": "Code Coverage Type",
      "required": false,
      "defaultValue": "linesNotCovered",
      "options": {
        "linesNotCovered": "Line",
        "blocksNotCovered": "Block"
      }
    },
    {
      "name": "threshold",
      "type": "string",
      "label": "Coverage Threshold",
      "required": true,
      "defaultValue": "",
      "helpMarkDown": "Set the maximum desired threshold for line or blocks not covered"
    }   
  ],
  "execution": {
    "HttpRequest": {
      "Execute": {
        "EndpointId": "",
        "EndpointUrl": "$(system.teamFoundationCollectionUri)$(system.teamProjectId)/_apis/test/codecoverage?buildId=$(Build.BuildId)&flags=1&api-version=5.0-preview.1",
        "Method": "GET",
        "Headers": "{\"Content-Type\":\"application/json\", \"Authorization\":\"Bearer $(system.accesstoken)\", \"Accept\":\"application/json\"}",
        "parameters": {
          "BuildId":"$(Build.BuildId)"
        },
        "WaitForCompletion": "false",
        "Expression": "lt(jsonpath('$.value[0].modules[?(@.name==''$(module)'')].statistics[''$(Type)'']')[0], $(threshold))"
      }
    }
  }
}
